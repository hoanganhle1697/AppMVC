@model IEnumerable<Product>

@{
    ViewData["Title"] = "Danh Sách Sản Phẩm";
}

<h1>Danh Sách Sản Phẩm</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="@Url.Content("~/img/" + item.HinhAnh)" class="card-img-top" alt="@item.TenSP"
                    style="height: 200px; object-fit: cover;">

                <div class="card-body">
                    <h5 class="card-title">@item.TenSP</h5>
                    <p class="card-text">@item.MoTa</p>
                    <p class="card-text"><strong>Giá:</strong> @item.Gia.ToString("C")</p>
                    <a href="@Url.Action("Edit", "SanPham", new { id = item.Id })" class="btn btn-primary">Sửa</a>
                    <a href="@Url.Action("Delete", "SanPham", new { id = item.Id })" class="btn btn-danger">Xóa</a>
                </div>
            </div>
        </div>
    }
</div>
